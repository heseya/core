    "components": {
        "schemas": {
            "Address": {
                "properties": {
                    "id": {
                        "type": "integer"
                    },
                    "name": {
                        "type": "string",
                        "example": "Johny Mielony"
                    },
                    "address": {
                        "type": "string",
                        "example": "Gda≈Ñska 89/1"
                    },
                    "vat": {
                        "type": "string",
                        "example": "9571099580"
                    },
                    "zip": {
                        "type": "string",
                        "example": "80-200"
                    },
                    "city": {
                        "type": "string",
                        "example": "Bydgoszcz"
                    },
                    "country": {
                        "type": "string",
                        "example": "PL"
                    },
                    "phone": {
                        "type": "string",
                        "example": "+48543234123"
                    }
                },
                "type": "object"
            },
            "Brand": {
                "properties": {
                    "id": {
                        "type": "integer"
                    },
                    "name": {
                        "type": "string",
                        "example": "Depth Steel"
                    },
                    "slug": {
                        "type": "string",
                        "example": "depth-steel"
                    },
                    "public": {
                        "type": "boolean"
                    }
                },
                "type": "object"
            },
            "Category": {
                "properties": {
                    "id": {
                        "type": "integer"
                    },
                    "name": {
                        "type": "string",
                        "example": "Rings & Sets"
                    },
                    "slug": {
                        "type": "string",
                        "example": "rings-and-sets"
                    },
                    "public": {
                        "type": "boolean"
                    }
                },
                "type": "object"
            },
            "Error": {
                "properties": {
                    "code": {
                        "description": "Http response code.",
                        "type": "integer",
                        "example": 500
                    },
                    "message": {
                        "description": "Error message.",
                        "type": "string",
                        "example": "Some error message."
                    }
                },
                "type": "object"
            },
            "Item": {
                "properties": {
                    "id": {
                        "type": "integer"
                    },
                    "name": {
                        "type": "string",
                        "example": "Chain"
                    },
                    "symbol": {
                        "type": "string"
                    },
                    "qty": {
                        "type": "number",
                        "example": 20
                    }
                },
                "type": "object"
            },
            "Order": {
                "properties": {
                    "id": {
                        "type": "integer"
                    },
                    "email": {
                        "type": "string",
                        "example": "admin@example.com"
                    },
                    "comment": {
                        "type": "string",
                        "example": "asap plz"
                    },
                    "shipping_method": {
                        "$ref": "#/components/schemas/ShippingMethod"
                    },
                    "items": {
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/OrderItem"
                        }
                    },
                    "delivery_address": {
                        "$ref": "#/components/schemas/Address"
                    },
                    "invoice_address": {
                        "$ref": "#/components/schemas/Address"
                    }
                },
                "type": "object"
            },
            "OrderItem": {
                "properties": {
                    "product_id": {
                        "type": "integer"
                    },
                    "qty": {
                        "type": "number",
                        "example": "12.34"
                    },
                    "schema_items": {
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/ProductSchemaItem"
                        }
                    }
                },
                "type": "object"
            },
            "Page": {
                "properties": {
                    "id": {
                        "type": "integer"
                    },
                    "slug": {
                        "type": "string",
                        "example": "terms-and-conditions"
                    },
                    "name": {
                        "type": "string",
                        "example": "Terms & Conditions"
                    },
                    "public": {
                        "type": "boolean"
                    },
                    "content": {
                        "description": "HTML page content.",
                        "type": "string",
                        "example": "<h1>Hello World</h1>"
                    },
                    "content_raw": {
                        "description": "Raw MD content.",
                        "type": "string",
                        "example": "# Hello World!"
                    }
                },
                "type": "object"
            },
            "Product": {
                "properties": {
                    "id": {
                        "type": "integer"
                    },
                    "name": {
                        "type": "string",
                        "example": "Snake Ring"
                    },
                    "slug": {
                        "type": "string",
                        "example": "snake-ring"
                    },
                    "price": {
                        "type": "number",
                        "example": 229.99
                    },
                    "description": {
                        "description": "Description in HTML.",
                        "type": "string",
                        "example": "<p>Awesome stuff!</p>"
                    },
                    "public": {
                        "type": "boolean"
                    },
                    "brand": {
                        "$ref": "#/components/schemas/Brand"
                    },
                    "category": {
                        "$ref": "#/components/schemas/Category"
                    },
                    "schemas": {
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/ProductSchema"
                        }
                    }
                },
                "type": "object"
            },
            "ProductSchema": {
                "properties": {
                    "id": {
                        "type": "integer"
                    },
                    "name": {
                        "type": "string",
                        "example": "Chain"
                    },
                    "type": {
                        "type": "integer"
                    },
                    "required": {
                        "type": "boolean"
                    },
                    "schemaItems": {
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/ProductSchemaItem"
                        }
                    }
                },
                "type": "object"
            },
            "ProductSchemaItem": {
                "properties": {
                    "id": {
                        "type": "integer"
                    },
                    "extra_price": {
                        "type": "number",
                        "example": 19.99
                    },
                    "value": {
                        "type": "string"
                    },
                    "item": {
                        "$ref": "#/components/schemas/Item"
                    }
                },
                "type": "object"
            },
            "ShippingMethod": {
                "properties": {
                    "id": {
                        "type": "integer"
                    },
                    "name": {
                        "type": "string",
                        "example": "Next Day Courier"
                    },
                    "price": {
                        "type": "number",
                        "example": 10.99
                    },
                    "public": {
                        "type": "boolean"
                    }
                },
                "type": "object"
            },
            "User": {
                "properties": {
                    "id": {
                        "type": "integer"
                    },
                    "name": {
                        "description": "User first and last name.",
                        "type": "string",
                        "example": "Johny Mielony"
                    },
                    "email": {
                        "type": "string",
                        "example": "info@hesyea.com"
                    },
                    "avatar": {
                        "description": "Url to avatar.",
                        "type": "string",
                        "example": "//www.gravatar.com/avatar/example.jpg"
                    }
                },
                "type": "object"
            }
        },
        "requestBodies": {
            "OrderCreate": {
                "content": {
                    "application/json": {
                        "schema": {
                            "properties": {
                                "email": {
                                    "type": "string",
                                    "example": "admin@example.com"
                                },
                                "shipping_method_id": {
                                    "type": "integer"
                                },
                                "comment": {
                                    "type": "string",
                                    "example": "asap plz"
                                },
                                "is_statute_accepted": {
                                    "type": "boolean"
                                },
                                "items": {
                                    "type": "array",
                                    "items": {
                                        "properties": {
                                            "product_id": {
                                                "type": "integer"
                                            },
                                            "qty": {
                                                "type": "number"
                                            },
                                            "schema_items": {
                                                "type": "array",
                                                "items": {
                                                    "type": "integer"
                                                }
                                            },
                                            "custom_schemas": {
                                                "type": "array",
                                                "items": {
                                                    "properties": {
                                                        "schema_id": {
                                                            "type": "integer"
                                                        },
                                                        "value": {
                                                            "type": "string"
                                                        }
                                                    },
                                                    "type": "object"
                                                }
                                            }
                                        },
                                        "type": "object"
                                    }
                                },
                                "delivery_address": {
                                    "$ref": "#/components/schemas/Address"
                                },
                                "invoice_address": {
                                    "$ref": "#/components/schemas/Address"
                                }
                            },
                            "type": "object"
                        }
                    }
                }
            }
        },
        "securitySchemes": {
            "oauth": {
                "type": "oauth2",
                "flows": {
                    "implicit": {
                        "authorizationUrl": "https://depth.space/oauth",
                        "scopes": []
                    }
                }
            }
        }
    }
